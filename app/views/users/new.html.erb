
<div class="signup">

  <form action="<%= users_url %>" method="post">
    <%= auth_token_input %>
    <label class="formname">
      Username<br>
      <input class="forminput" type="text" name="user[username]" value="">
    </label><br><br>

    <label class="formname">
      Password<br>
      <input class="forminput" type="password" name="user[password]" value="">
    </label><br><br>

    <input class="formbutton" type="submit" value="Sign Up">
  </form>
  <div class="sign">
    Already a member? <c class="link"> <%= link_to "Sign In", new_session_url %></c>
  </div>
</div>
