<div class="signin">

  <form action="<%= session_url %>" method="post">
    <%= auth_token_input %>

    <label class="formname" for="user_username">
      Username</label><br>
      <input class="forminput" type="text" name="user[username]" value="" id="user_username">

      <br><br>
    <label class="formname">
      Password (6 characters minimum)<br>
      <input class="forminput" type="password" name="user[password]" value="">
    </label><br><br>

    <input class="formbutton" type="submit" value="Sign In">
  </form>
  <div class="sign">
    Not a member? <c class='link'><%= link_to "Sign Up", new_user_url%></c>
  </div>
</div>
